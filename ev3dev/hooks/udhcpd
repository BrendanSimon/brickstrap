# configure udhcpd

# enable
sed -i '/^DHCPD_ENABLED/ s/DHCPD_ENABLED/#DHCPD_ENABLED/' $ROOTDIR/etc/default/udhcpd

# change IP address range
sed -i '/^start\s*192\.168\.0\./ s/192\.168\.0\./192.168.3./' $ROOTDIR/etc/udhcpd.conf
sed -i '/^end\s*192\.168\.0\./ s/192\.168\.0\./192.168.3./' $ROOTDIR/etc/udhcpd.conf

# bind to usb0
sed -i '/^interface\s*eth0/ s/eth0/usb0/' $ROOTDIR/etc/udhcpd.conf
