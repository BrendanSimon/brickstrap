#!/bin/bash

#!============================================================================
#!
#!  Install python modules (not available as a Debian package)
#!
#!============================================================================

PY_MODS=(
    "tee"
    "PySensors"
    "selectors2"
    )

#!
#! Install Python modules.
#!
for mod in ${PY_MODS[@]} ; do
    echo "Installing python module: '${mod}' ..."
    ${CHROOTBINDCMD} pip install --upgrade ${mod}
done
