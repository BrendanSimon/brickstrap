#!============================================================================
#! Settings file for EFD System.
#!============================================================================

SERIAL_NUMBER="EFD-0000"

SITE_NAME="EFD-0000"

HOSTNAME="EFD-0000"

#! set PHASE_MODE to one of: "poly", "red, "white", or "blue"
#! default is "poly" if not specified.
PHASE_MODE="poly"

#! set ADC_OFFSET (DC Offset)
#! default is 0 if not specified.
ADC_OFFSET=0

#! set PEAK_DETECT_MODE to on of: "normal", "squared"
#! default is "normal" if not specified.
PEAK_DETECT_MODE="normal"

#! set voltage threshold for partial discharge event trigger.
#! defaults to X.X if not specified.
PD_EVENT_TRIGGER_VOLTAGE=0.5

#! set interval between successive reporting alerts (SMS).
#! defaults to 300 (5 minutes) if not specified.
PD_EVENT_REPORTING_INTERVAL=300

#REPORTING_SMS_PHONE_NUMBERS="+61417000000","+61417000000"
REPORTING_SMS_PHONE_NUMBERS="+61470000000",

#! set the GSM network APN (used for 3G cellular comms)
#! default is "telstra.extranet" if not specified.
NETWORK_APN="telstra.extranet"

#! Periodic Reboot Schedule ( crontab syntax.  e.g. "0 2 * * *" to reboot at 2AM UTC each day )
#! default is "" if not specified => never do periodic reboot.
#PERIODIC_REBOOT_SCHED="0 2 * * *"

#! Periodic Reboot Type ( "reboot" | "shutdown" )
#! default is "reboot" if not specified
#PERIODIC_REBOOT_TYPE="reboot"

#! Server to ping to check internet connection is ok.
PING_SERVER="203.14.0.251"

#! Number of ping packets to send when checking internet connection.
#! default is 10 if not specified.
PING_COUNT=10

#! Number of seconds of no internet (ping response) before rebooting (powerdown) system
#! default is 600 (10 minutes) if not specified.
PING_REBOOT_TIMEOUT=600

WEB_SERVER="http://www.efd-portal.com.au:81"

#EFD_PING_SERVERS="http://www.efd-portal.com.au:81 http://portal.efdweb.com"
EFD_PING_SERVERS="http://portal.efdweb.com"

#! set FFT size (must be power of 2).
#! default is 256 if not specified.
FFT_SIZE=256

ETH0_MAC_ADDRESS="00:0a:35:EF:00:00"

#! Append gps, battery voltage, solar voltage and box temperature to measurements log.
#! NOTE: this is for testing the new web server that IND are developing !!
#! It will probably be a temporary settings !!
APPEND_GPS_DATA_TO_MEASUREMENTS_LOG=1

